#include<stdio.h>

int main() {
    int N, num, sum = 0;
    float average;

    printf("Enter the value of N: ");
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) {
        printf("Enter number %d: ", i);
        scanf("%d", &num);
        sum += num;
    }

    average = (float)sum / N;

    printf("Sum of %d numbers is: %d\n", N, sum);
    printf("Average of %d numbers is: %.2f\n", N, average);

    return 0;
}
